{
  "name": "azure-devops-workflow",
  "displayName": "Azure DevOps Workflow",
  "description": "Manage Azure DevOps work items, sprint boards, and task status directly from VS Code",
  "version": "0.3.7",
  "publisher": "hans-christian-thjomoe",
  "author": {
    "name": "Hans Christian Thjømøe",
    "url": "https://github.com/hybriden"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hybriden/Visual.Workflow.git"
  },
  "bugs": {
    "url": "https://github.com/hybriden/Visual.Workflow/issues"
  },
  "homepage": "https://github.com/hybriden/Visual.Workflow#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "enabledApiProposals": [
    "languageModels"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "azureDevOps.openSprintBoard",
        "title": "Azure DevOps: Open Sprint Board",
        "icon": "$(project)"
      },
      {
        "command": "azureDevOps.openWorkItem",
        "title": "Azure DevOps: Open Work Item",
        "icon": "$(search)"
      },
      {
        "command": "azureDevOps.createWorkItem",
        "title": "Azure DevOps: Create Work Item",
        "icon": "$(add)"
      },
      {
        "command": "azureDevOps.refreshWorkItems",
        "title": "Azure DevOps: Refresh Work Items",
        "icon": "$(refresh)"
      },
      {
        "command": "azureDevOps.changeWorkItemStatus",
        "title": "Azure DevOps: Change Work Item Status",
        "icon": "$(edit)"
      },
      {
        "command": "azureDevOps.viewWorkItemDetails",
        "title": "Azure DevOps: View Work Item Details"
      },
      {
        "command": "azureDevOps.setupWizard",
        "title": "Azure DevOps: Setup Wizard",
        "icon": "$(gear)"
      },
      {
        "command": "azureDevOps.toggleCompletedItems",
        "title": "Azure DevOps: Toggle Show/Hide Completed Items",
        "icon": "$(filter)"
      },
      {
        "command": "azureDevOps.toggleRemovedItems",
        "title": "Azure DevOps: Toggle Show/Hide Removed Items",
        "icon": "$(filter)"
      },
      {
        "command": "azureDevOps.clearAllFilters",
        "title": "Azure DevOps: Clear All Filters",
        "icon": "$(clear-all)"
      },
      {
        "command": "azureDevOps.switchProject",
        "title": "Azure DevOps: Switch Project",
        "icon": "$(folder)"
      },
      {
        "command": "azureDevOps.quickSwitchProject",
        "title": "Azure DevOps: Quick Switch Project",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "azureDevOps.expandAllSprintBoard",
        "title": "Azure DevOps: Expand All Sprint Board Items",
        "icon": "$(expand-all)"
      },
      {
        "command": "azureDevOps.showAiStatus",
        "title": "Azure DevOps: Show AI Status",
        "icon": "$(info)"
      },
      {
        "command": "azureDevOps.toggleAiSuggestions",
        "title": "Azure DevOps: Toggle AI Suggestions",
        "icon": "$(lightbulb)"
      },
      {
        "command": "azureDevOps.generateDescription",
        "title": "Azure DevOps: Generate Description with AI",
        "icon": "$(sparkle)"
      },
      {
        "command": "azureDevOps.contextAddToSprint",
        "title": "Add to Current Sprint",
        "icon": "$(add)"
      },
      {
        "command": "azureDevOps.contextRemoveFromSprint",
        "title": "Remove from Sprint",
        "icon": "$(remove)"
      },
      {
        "command": "azureDevOps.contextChangeStatus",
        "title": "Change Status",
        "icon": "$(edit)"
      },
      {
        "command": "azureDevOps.contextCreateChildTask",
        "title": "Add Task",
        "icon": "$(add)"
      },
      {
        "command": "azureDevOps.contextAssignChildrenToMe",
        "title": "Assign All Children to Me",
        "icon": "$(person)"
      },
      {
        "command": "azureDevOps.refreshProjectManager",
        "title": "Azure DevOps: Refresh Project Manager",
        "icon": "$(refresh)"
      },
      {
        "command": "azureDevOps.changeProjectManagerGrouping",
        "title": "Azure DevOps: Change Project Manager Grouping",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "azureDevOps.logTime",
        "title": "Log Time",
        "icon": "$(watch)"
      },
      {
        "command": "azureDevOps.refreshPullRequests",
        "title": "Azure DevOps: Refresh Pull Requests",
        "icon": "$(refresh)"
      },
      {
        "command": "azureDevOps.openPullRequest",
        "title": "Azure DevOps: Open Pull Request",
        "icon": "$(git-pull-request)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "azureDevOps.quickSwitchProject",
          "when": "view == azureDevOpsSprintBoard",
          "group": "navigation@1"
        },
        {
          "command": "azureDevOps.createWorkItem",
          "when": "view == azureDevOpsSprintBoard",
          "group": "navigation@2"
        },
        {
          "command": "azureDevOps.expandAllSprintBoard",
          "when": "view == azureDevOpsSprintBoard",
          "group": "navigation@3"
        },
        {
          "command": "azureDevOps.createWorkItem",
          "when": "view == azureDevOpsMyWorkItems",
          "group": "navigation"
        },
        {
          "command": "azureDevOps.changeProjectManagerGrouping",
          "when": "view == azureDevOpsProjectManager",
          "group": "navigation@1"
        },
        {
          "command": "azureDevOps.refreshProjectManager",
          "when": "view == azureDevOpsProjectManager",
          "group": "navigation@2"
        },
        {
          "command": "azureDevOps.refreshPullRequests",
          "when": "view == azureDevOpsPullRequests",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "azureDevOps.contextCreateChildTask",
          "when": "view == azureDevOpsSprintBoard && viewItem == workItem",
          "group": "create@1"
        },
        {
          "command": "azureDevOps.contextCreateChildTask",
          "when": "view == azureDevOpsMyWorkItems && viewItem == workItem",
          "group": "create@1"
        },
        {
          "command": "azureDevOps.contextAddToSprint",
          "when": "view == azureDevOpsMyWorkItems && viewItem == workItem",
          "group": "sprint@1"
        },
        {
          "command": "azureDevOps.contextRemoveFromSprint",
          "when": "view == azureDevOpsSprintBoard && viewItem == workItem",
          "group": "sprint@1"
        },
        {
          "command": "azureDevOps.contextChangeStatus",
          "when": "view == azureDevOpsSprintBoard && viewItem == workItem",
          "group": "status@1"
        },
        {
          "command": "azureDevOps.contextAssignChildrenToMe",
          "when": "view == azureDevOpsSprintBoard && viewItem == workItem",
          "group": "assign@1"
        },
        {
          "command": "azureDevOps.contextChangeStatus",
          "when": "view == azureDevOpsMyWorkItems && viewItem == workItem",
          "group": "status@1"
        },
        {
          "command": "azureDevOps.contextAssignChildrenToMe",
          "when": "view == azureDevOpsMyWorkItems && viewItem == workItem",
          "group": "assign@1"
        },
        {
          "command": "azureDevOps.contextCreateChildTask",
          "when": "view == azureDevOpsProjectManager && viewItem == workItem",
          "group": "create@1"
        },
        {
          "command": "azureDevOps.contextChangeStatus",
          "when": "view == azureDevOpsProjectManager && viewItem == workItem",
          "group": "status@1"
        },
        {
          "command": "azureDevOps.contextAssignChildrenToMe",
          "when": "view == azureDevOpsProjectManager && viewItem == workItem",
          "group": "assign@1"
        },
        {
          "command": "azureDevOps.logTime",
          "when": "view == azureDevOpsSprintBoard && viewItem == workItem && config.azureDevOps.useTimeLoggingExtension",
          "group": "time@1"
        },
        {
          "command": "azureDevOps.logTime",
          "when": "view == azureDevOpsMyWorkItems && viewItem == workItem && config.azureDevOps.useTimeLoggingExtension",
          "group": "time@1"
        },
        {
          "command": "azureDevOps.logTime",
          "when": "view == azureDevOpsProjectManager && viewItem == workItem && config.azureDevOps.useTimeLoggingExtension",
          "group": "time@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "azureDevOps.openSprintBoard",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "azureDevOps.openWorkItem",
        "key": "ctrl+alt+o",
        "mac": "cmd+alt+o"
      },
      {
        "command": "azureDevOps.changeWorkItemStatus",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u"
      },
      {
        "command": "azureDevOps.quickSwitchProject",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azureDevOpsWorkflow",
          "title": "Azure DevOps",
          "icon": "resources/devops-icon.svg"
        }
      ]
    },
    "views": {
      "azureDevOpsWorkflow": [
        {
          "id": "azureDevOpsSprintBoard",
          "name": "Sprint Board"
        },
        {
          "id": "azureDevOpsMyWorkItems",
          "name": "My Work Items"
        },
        {
          "id": "azureDevOpsProjectManager",
          "name": "Project Manager",
          "when": "config.azureDevOps.enableProjectManager"
        },
        {
          "id": "azureDevOpsPullRequests",
          "name": "Pull Requests",
          "when": "config.azureDevOps.enablePullRequests"
        }
      ]
    },
    "configuration": {
      "title": "Azure DevOps Workflow",
      "properties": {
        "azureDevOps.organization": {
          "type": "string",
          "default": "",
          "description": "Azure DevOps organization name (e.g., 'myorg' from dev.azure.com/myorg)"
        },
        "azureDevOps.pat": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token for authentication",
          "scope": "machine-overridable",
          "format": "password"
        },
        "azureDevOps.project": {
          "type": "string",
          "default": "",
          "description": "Current project name (managed by Setup Wizard and Project Switcher)"
        },
        "azureDevOps.team": {
          "type": "string",
          "default": "",
          "description": "Current team name (managed by Setup Wizard)"
        },
        "azureDevOps.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh work items"
        },
        "azureDevOps.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Auto-refresh interval in seconds (default: 5 minutes)"
        },
        "azureDevOps.hideCompletedItems": {
          "type": "boolean",
          "default": true,
          "description": "Hide completed work items (Done, Closed, Resolved)"
        },
        "azureDevOps.hideRemovedItems": {
          "type": "boolean",
          "default": true,
          "description": "Hide removed work items"
        },
        "azureDevOps.showOnlyAssignedToMe": {
          "type": "boolean",
          "default": false,
          "description": "In Sprint Board, show only items assigned to me"
        },
        "azureDevOps.enableAiSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered suggestions for work item descriptions using GitHub Copilot"
        },
        "azureDevOps.enableCopilotAgent": {
          "type": "boolean",
          "default": false,
          "description": "Enable GitHub Copilot coding agent integration to create issues from implementation plans (uses automatic GitHub authentication)"
        },
        "azureDevOps.githubDefaultOrg": {
          "type": "string",
          "default": "",
          "description": "Default GitHub organization for Copilot agent integration"
        },
        "azureDevOps.enableProjectManager": {
          "type": "boolean",
          "default": false,
          "description": "Enable Project Manager view showing all work items in the project"
        },
        "azureDevOps.enablePullRequests": {
          "type": "boolean",
          "default": false,
          "description": "Enable Pull Requests view showing PRs you're assigned to review or have created"
        },
        "azureDevOps.showOverEstimateAlerts": {
          "type": "boolean",
          "default": true,
          "description": "Show visual alerts for work items that exceed their original estimates"
        },
        "azureDevOps.overEstimateThreshold": {
          "type": "number",
          "default": 0,
          "description": "Percentage threshold for over-estimate alerts (0 = any over-estimate, 10 = 10% or more)"
        },
        "azureDevOps.projectManagerGroupBy": {
          "type": "string",
          "enum": [
            "state",
            "type",
            "iteration",
            "assignedTo",
            "epic"
          ],
          "default": "state",
          "description": "How to group work items in Project Manager view"
        },
        "azureDevOps.useTimeLoggingExtension": {
          "type": "boolean",
          "default": false,
          "description": "Enable integration with the Time Logging Extension for Azure DevOps (Premium). When enabled, you can log time directly from VS Code."
        },
        "azureDevOps.timeLoggingApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key from Time Log Admin (found in Project Settings > Time Log Admin). Required for Time Logging Extension integration.",
          "scope": "machine-overridable",
          "format": "password"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node ./esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node ./esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node ./esbuild.js --production",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run test:unit",
    "test:unit": "mocha",
    "test:unit:watch": "mocha --watch",
    "test:integration": "npm run compile && node ./out/test/runTest.js",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.2",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
